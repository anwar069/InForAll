<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardview_light_background"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/llInfo"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#00308F"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/lltransparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#AA000000"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:weightSum="1">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="1dp"
                        android:weightSum="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/ivPopUpPic"
                                android:layout_marginTop="3dp"
                                android:layout_width="0dp"
                                android:layout_height="70dp"
                                android:layout_weight="0.2"
                                android:background="@drawable/face" />


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.8"
                                android:orientation="vertical"
                                android:paddingLeft="10dp"
                                android:paddingTop="5dp">


                                <TextView
                                    android:id="@+id/tvPopName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Ahmed Anwar"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                                    android:textColor="@color/cardview_light_background" />

                                <TextView
                                    android:id="@+id/tvPopLocation"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Bangalore, Karanataka"
                                    android:textColor="@color/cardview_light_background" />

                                <TextView
                                    android:id="@+id/tvPopCountry"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="India"
                                    android:textColor="@color/cardview_light_background" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp">
                <TextView
                    android:id="@+id/tvDisableDialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Disable"
                    android:textSize="20sp"
                    android:visibility="gone"
                    android:layout_margin="7dp"
                    android:layout_weight="0.1"
                    android:clickable="true"
                    android:textColor="#ff0000"
                    />
                <!--<ImageView-->
                    <!--android:id="@+id/ivDisable"-->
                    <!--android:layout_width="35dp"-->
                    <!--android:layout_height="35dp"-->
                    <!--android:layout_marginTop="3dp"-->
                    <!--android:layout_weight="0.1"-->
                    <!--android:clickable="true"-->
                    <!--android:tint="#ff0000"-->
                    <!--android:src="@drawable/ic_disable" />-->
                <!--<TextView-->
                <!--android:id="@+id/tvPopNumber"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="+918446167645"-->
                <!--android:textAppearance="@style/TextAppearance.AppCompat.Medium"-->
                <!--android:textColor="@color/cardview_dark_background" />-->
                <!--<ImageView-->
                    <!--android:id="@+id/ivCloseDialog"-->
                    <!--android:layout_width="40dp"-->
                    <!--android:layout_height="40dp"-->
                    <!--android:layout_weight="0.1"-->
                    <!--android:clickable="true"-->
                    <!--android:tint="#000000"-->
                    <!--android:layout_alignParentRight="true"-->
                    <!--android:src="@drawable/ic_close" />-->

                <TextView
                    android:id="@+id/tvCloseDialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Close"
                    android:textSize="15sp"
                    android:layout_margin="3dp"
                    android:clickable="true"
                    android:textColor="#000000"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
