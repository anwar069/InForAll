<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/header_cover_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/search_back" />

        <ImageButton
            android:id="@+id/ib_user_profile_photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/header_cover_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-60dp"
            android:background="@drawable/profile_circular_border_imageview"
            android:elevation="5dp"
            android:padding="3dp"
            android:scaleType="centerCrop"
            android:src="@drawable/face" />

        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_cover_image"
            android:background="@color/colorPrimaryDark"
            android:elevation="4dp"
            android:paddingBottom="24dp">


            <ImageView
                android:id="@+id/iv_add_contact"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="16dp"
                android:clickable="true"
                android:src="@drawable/ic_add_contact" />
            <ImageView
                android:id="@+id/iv_call_contact"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="16dp"
                android:layout_toRightOf="@+id/iv_add_contact"
                android:clickable="true"
                android:src="@drawable/ic_call_contact" />

            <!--<ImageView-->
            <!--android:id="@+id/iv_add_contact"-->
            <!--android:layout_width="50dp"-->
            <!--android:layout_height="50dp"-->
            <!--android:layout_marginLeft="16dp"-->
            <!--android:layout_marginTop="16dp"-->
            <!--android:layout_toLeftOf="@+id/drop_down_option_menu"-->
            <!--android:src="@drawable/ic_add_contact" />-->
            <ImageView
                android:id="@+id/iv_block_contact"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_toLeftOf="@+id/iv_sms"
                android:layout_marginRight="26dp"
                android:layout_marginTop="16dp"
                android:clickable="true"
                android:src="@drawable/ic_add_block" />
            <ImageView
                android:id="@+id/iv_sms"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="26dp"
                android:layout_marginTop="16dp"
                android:clickable="true"
                android:src="@drawable/ic_sms" />

            <TextView
                android:id="@+id/tv_user_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="76dp"
                android:text="Ahmed Anwar"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!--<TextView-->
            <!--android:id="@+id/tv_user_profile_short_bio"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@+id/tv_user_profile_name"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:layout_marginTop="12dp"-->
            <!--android:text="Android free tutorials and example"-->
            <!--android:textColor="#fff"-->
            <!--android:textSize="14sp" />-->
        </RelativeLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_layout"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ll_call"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:padding="20dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_card_call" />

                    <TextView
                        android:id="@+id/tv_user_profile_number"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:background="#fff"
                        android:clickable="true"
                        android:elevation="4dp"
                        android:padding="20dp"
                        android:text="+918446167645"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:padding="20dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_card_location" />

                    <TextView
                        android:id="@+id/tv_user_profile_location"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:background="#fff"
                        android:clickable="true"
                        android:elevation="4dp"
                        android:padding="20dp"
                        android:text="Karnatak Bangalore, India"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:padding="20dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_card_emai" />

                    <TextView
                        android:id="@+id/tv_user_profile_email"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:background="#fff"
                        android:clickable="true"
                        android:elevation="4dp"
                        android:padding="20dp"
                        android:text=""
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />
                </LinearLayout>
            </android.support.v7.widget.CardView>



        </LinearLayout>
    </RelativeLayout>
</ScrollView>